<launch>
    <arg name="name"/>
    <arg name="fcu_url"/>
    <arg name="tgt_system"/>

    <node pkg="mavros" exec="mavros_node" ns="${var name}/mavros" required="false" clear_params="true" output="screen"
          respawn="true">
        <param name="fcu_url" value="$(var fcu_url)"/>
        <param name="gcs_url" value=""/>
        <param name="target_system_id" value="$(var tgt_system)"/>
        <param name="target_component_id" value="1"/>
        <param name="fcu_protocol" value="v2.0"/>

        <!-- load blacklist, config -->
        <param from="/opt/ros/galactic/share/mavros/launch/apm_pluginlists.yaml"/>
        <param from="/opt/ros/galactic/share/mavros/launch/apm_config.yaml"/>
    </node>
</launch>
